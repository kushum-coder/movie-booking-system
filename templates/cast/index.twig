{% extends "layout.twig" %}

{% block title %}Cast Members{% endblock %}

{% block content %}
<h2>Cast Members</h2>

<a href="./public/cast/add.php">
    <button>Add Cast Member</button>
</a>

<table class="card">
    <thead>
        <tr>
            <th>Name</th>
            <th style="width:160px;">Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for cast in casts %}
        <tr>
            <td>{{ cast.name }}</td>
            <td>
                <a href="./public/cast/edit.php?id={{ cast.id }}">Edit</a> |
                <a href="./public/cast/delete.php?id={{ cast.id }}"
                   onclick="return confirm('Delete this cast member?')">
                   Delete
                </a>
            </td>
        </tr>
    {% else %}
        <tr>
            <td colspan="2">No cast members found</td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{% endblock %}
